                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link m-4 d-md-none mr-3">
                        <i class="fa fa-bars"></i>
                    </button>              
                <!-- Begin Page Content -->
                <div class="container-fluid">

                        <!-- Page Heading -->
                        <h1 class="mt-3 mb-3 h3 text-gray-800">Occurence Book</h1>
               
                    
                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Statement log</h6>
                            </div>
                            <div class="container mt-5 p-1 text-dark" style="height:100%;">
                              <h1>Statement log</h1>
                              <form
                                action="/statement/add"
                                method="POST"
                                class="row g-3"
                              >
                                <div class="col-md-6 mt-3">
                                  <label for="firstName" class="form-label">Offender Name</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    id="fisrtNmae"
                                    placeholder="John/Jane"
                                    required
                                    name="offenderName"
                                  />
                                </div>
                                <div class="col-md-6 mt-3">
                                  <label for="lastName" class="form-label">Victim Name</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    id="lastName"
                                    placeholder="Doe"
                                    required
                                    name="victimName"
                                  />
                                </div>
                                <div class="col-md-8 mt-3">
                                  <label for="emailInfo" class="form-label">Offender ID</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    required
                                    name="offenderId"
                                    placeholder="12345685"
                                  />
                                </div>
                                <div class="col-md-4 mt-3">
                                  <label for="victimId" class="form-label">Victim ID.</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    id="victimId"
                                    placeholder="12345678"
                                    name="victimId"
                            
                                  />
                                </div>
                                <div class="col-md-6 mt-3">
                                  <label for="caseInput" class="form-label">Case</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Case"
                                    id="caseInput"
                                    name="offenderCrime"
                                  />
                                </div>
                                <div class="col-md-6 mt-3">
                                  <label for="caseInputNumber" class="form-label">Case Number</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Case Number"
                                    id="caseInputNumber"
                                    name="caseId"
                                  />
                                </div>
                                <div class="col-md-12 mt-3">
                                  <label for="comments" class="form-label">Statement</label>
                                  <textarea
                                    class="form-control"
                                    id="comments"
                                    rows="3"
                                    name="statement"
                                    required
                                  ></textarea>
                                </div>
                                <div class="col-md-12 mt-4">
                                  <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                              </form>
                            </div>
                            
                        </div>

                </div>
            <!-- End of Main Content -->

